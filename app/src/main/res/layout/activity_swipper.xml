<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_frag_bg"
    tools:context=".ui.swipperActivity.SwipperActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_110sdp"
        android:src="@drawable/logo_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bank_details"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_270sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:elevation="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/logo"
        app:layout_constraintStart_toStartOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <ImageView
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_350sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:src="@drawable/card_shadow_left"
        app:layout_constraintEnd_toEndOf="@id/cv_bank_details"
        app:layout_constraintTop_toTopOf="@id/cv_bank_details" />

    <ImageView
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_350sdp"
        android:layout_marginTop="@dimen/_minus55sdp"
        android:src="@drawable/card_shadow_right"
        app:layout_constraintStart_toStartOf="@id/cv_bank_details"
        app:layout_constraintTop_toTopOf="@id/cv_bank_details" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="#F9DC31"
        app:cardCornerRadius="@dimen/_50sdp"
        app:cardElevation="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@id/cv_bank_details"
        app:layout_constraintStart_toStartOf="@id/cv_bank_details"
        app:layout_constraintTop_toTopOf="@id/cv_bank_details">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/_13sdp"
            android:src="@drawable/bank_img" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:elevation="@dimen/_13sdp"
        android:fontFamily="@font/josefinsanssemibold"
        android:text="Bank of Brazil"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="@id/cv_bank_details"
        app:layout_constraintStart_toStartOf="@id/cv_bank_details"
        app:layout_constraintTop_toBottomOf="@id/cv_img" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:elevation="@dimen/_13sdp"
        android:fontFamily="@font/josefinsanssemibold"
        android:text="4k scanners"
        android:textAllCaps="true"
        android:textColor="@color/medium_blue"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="@id/cv_bank_details"
        app:layout_constraintStart_toStartOf="@id/cv_bank_details"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_name" />

    <View
        android:id="@+id/view_face_login"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_blue_circle_gradient"
        android:elevation="@dimen/_13sdp"
        app:layout_constraintEnd_toStartOf="@id/view_verticle_divider"
        app:layout_constraintStart_toStartOf="@id/cv_bank_details"
        app:layout_constraintTop_toBottomOf="@id/tv_type" />

    <ImageView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:elevation="@dimen/_13sdp"
        android:src="@drawable/ic_face_login"
        app:layout_constraintBottom_toBottomOf="@id/view_face_login"
        app:layout_constraintEnd_toEndOf="@id/view_face_login"
        app:layout_constraintStart_toStartOf="@id/view_face_login"
        app:layout_constraintTop_toTopOf="@id/view_face_login" />

    <TextView
        android:id="@+id/tv_face_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:elevation="@dimen/_13sdp"
        android:fontFamily="@font/josefinsanssemibold"
        android:text="@string/face_scan"
        android:textAllCaps="true"
        android:textColor="@color/dark_blu_2"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="@id/view_face_login"
        app:layout_constraintStart_toStartOf="@id/view_face_login"
        app:layout_constraintTop_toBottomOf="@id/view_face_login" />

    <View
        android:id="@+id/view_verticle_divider"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/verticle_gradient_light"
        android:elevation="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="@id/view_face_login"
        app:layout_constraintEnd_toStartOf="@id/view_finger_login"
        app:layout_constraintStart_toEndOf="@id/view_face_login"
        app:layout_constraintTop_toTopOf="@id/view_face_login" />

    <View
        android:id="@+id/view_finger_login"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_blue_circle_gradient"
        android:elevation="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="@id/cv_bank_details"
        app:layout_constraintStart_toEndOf="@id/view_verticle_divider"
        app:layout_constraintTop_toBottomOf="@id/tv_type" />

    <ImageView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:elevation="@dimen/_13sdp"
        android:src="@drawable/ic_finger_print_login"
        app:layout_constraintBottom_toBottomOf="@id/view_finger_login"
        app:layout_constraintEnd_toEndOf="@id/view_finger_login"
        app:layout_constraintStart_toStartOf="@id/view_finger_login"
        app:layout_constraintTop_toTopOf="@id/view_finger_login" />

    <TextView
        android:id="@+id/tv_finger_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:elevation="@dimen/_13sdp"
        android:fontFamily="@font/josefinsanssemibold"
        android:text="@string/fingerprint"
        android:textAllCaps="true"
        android:textColor="@color/dark_blu_2"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="@id/view_finger_login"
        app:layout_constraintStart_toStartOf="@id/view_finger_login"
        app:layout_constraintTop_toBottomOf="@id/view_finger_login" />

    <ImageView
        android:id="@+id/iv_acc_rej_bg"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:src="@drawable/reject_accept_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_bank_details" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_reject"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:backgroundTint="#40FAFAFA"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/_40sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_acc_rej_bg"
        app:layout_constraintStart_toStartOf="@id/iv_acc_rej_bg"
        app:layout_constraintTop_toTopOf="@id/iv_acc_rej_bg" />

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintBottom_toBottomOf="@id/cv_reject"
        app:layout_constraintEnd_toEndOf="@id/cv_reject"
        app:layout_constraintStart_toStartOf="@id/cv_reject"
        app:layout_constraintTop_toTopOf="@id/cv_reject" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_accept"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:backgroundTint="#03FFD1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/_40sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_acc_rej_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_acc_rej_bg"
        app:layout_constraintTop_toTopOf="@id/iv_acc_rej_bg" />

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_tick"
        app:layout_constraintBottom_toBottomOf="@id/cv_accept"
        app:layout_constraintEnd_toEndOf="@id/cv_accept"
        app:layout_constraintStart_toStartOf="@id/cv_accept"
        app:layout_constraintTop_toTopOf="@id/cv_accept"
        app:tint="@color/dark_green" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_skip"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:backgroundTint="#33222222"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_acc_rej_bg" />

    <ImageView
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:src="@drawable/ic_skip_arrows"
        app:layout_constraintBottom_toBottomOf="@id/cv_skip"
        app:layout_constraintEnd_toEndOf="@id/cv_skip"
        app:layout_constraintStart_toStartOf="@id/cv_skip"
        app:layout_constraintTop_toTopOf="@id/cv_skip" />

</androidx.constraintlayout.widget.ConstraintLayout>